<design:component label="Simple Media">
    <design:attribute name="mediaId" label="Media Id" description="Write down the id of the media that you would like to play"/>
    <design:attribute name="showShared" label="Show 'Share' Button"/>
    <design:attribute name="shareButtonStyle" label="Share button type" datasource="Email,Iframe,Link" default="Email" description="Used to send an email with a link to the media, or to get a link that can be used in an article, or to get a public link"/>
    <design:attribute name="shareLinkType" label="Share Link Type" datasource="New Window,PopUp" default="New Window" description="By using a public link, video will be opened on a current page in a pop-up or in a new window"/>
    <design:attribute name="siteId" label="Site Id for Public Link" description="Required attribute for a public link"/>
</design:component>